<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Text Size Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/text_size_label"
        android:textSize="16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/text_size_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="3"
        android:progress="1"
        android:contentDescription="@string/increase_text_size" />

    <!-- High Contrast Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/high_contrast_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/high_contrast_label"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Reduced Motion Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/reduced_motion_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/reduced_motion"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Dyslexic Font Toggle -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/dyslexic_font_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/dyslexic_font"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Additional Info Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/screen_reader_options"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/talkback_support"
        android:textSize="14sp" />

</LinearLayout> 