<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/license_plate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License Plate: AA70 PYY"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/entry_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry: 01/05/2023 14:30"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/exit_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit: 01/05/2023 16:45"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/fee_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fee: Â£25.50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status: UNPAID"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/pay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:backgroundTint="@android:color/holo_blue_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 